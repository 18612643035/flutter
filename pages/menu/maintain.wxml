<movable-area class="area" scale-area>
  <movable-view y="700rpx" direction="vertical" inertia out-of-bounds >
	<view bindtap='goFileup' class="optBt">
		<van-icon color="#fff" name="plus" />
	</view>
  </movable-view>
</movable-area>
<view class="moreList">
  <View>
    <span>客户名称:</span><text>{{dict[allData.customerId]}}</text>
  </View>
  <view>
    <span>科室名称:</span><text>{{allData.deptName}}</text>
  </view>
    <view>
    <span>科室联系人:</span><text>{{allData.contact}}</text>
  </view>
  <view>
    <span data-index="{{bindex}}">联系电话:</span><text>{{allData.contactPhone}}</text>
  </view>
  <view>
    <span>设备类型:</span><text>{{devices[allData.deviceType]}}</text>
  </view>
  <view>
    <span>设备数量:</span><text>{{allData.devices.length}} </text><van-icon bindtap="showDevice" name="browsing-history" />
  </view>
	<view>
	  <span>安装完成时间:</span><text>{{allData.actualTime}}</text>
	</view>
	<view>
	  <span>维保创建时间:</span><text>{{allData.createTime}}</text>
	</view>
	<view>
	  <span>问题描述:</span><text>{{allData.content}}</text>
	</view>
	<view>
	  <span>详细地址:</span><text>{{allData.address}}</text>
	</view>
</view>
<logBox wx:if="{{logShow}}"  http="{{http}}"></logBox>
<view class="more-btmBox"></view>
<view class='subBtnBox'>
    <view bindtap="findTime" class="">完成维保</view>
</view>
<van-dialog
  use-slot
  title="选择时间"
  show="{{ show }}"
  show-cancel-button
  bind:confirm="find"
  bind:close="onClose"
>
  <view class="block">
      <van-datetime-picker
        type="date"
        value="{{ currentDate }}"
        bind:input="onInput"
        min-date="{{ minDate }}"
        formatter="{{ formatter }}"
      />
  </view>
</van-dialog>
<van-dialog
  use-slot
  title="设备列表"
  show="{{ showDev }}"
  show-cancel-button
  bind:confirm=""
  bind:close="onClose"
>
<view class="deviceDialog">
  <view wx:if="{{deviceData.length==0}}">设备列表为空</view>
  <view wx:for="{{deviceData}}" wx:key='index'>
  <view class="moreList">
    <view>
      <span data-index="{{bindex}}">设备编号:</span><text>{{item.deviceNo}}</text>
    </view>
    <view>
      <span data-index="{{bindex}}">安装时间:</span><text>{{item.installDate}}</text>
    </view>
      <view wx:for="{{item.maintainDateList}}" wx:key='index'>
      <span data-index="{{bindex}}">维保记录:</span><text>{{item}}</text>
    </view>
  </view>
  </view>
</view>
</van-dialog>
<van-dialog id="van-dialog" />
<van-toast id="van-toast" />