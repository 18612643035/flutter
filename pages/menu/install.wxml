	  <span>设备编号:</span>
		 <view class="devBox">
				<text wx:for="{{allData.devices}}" wx:key='index' wx:for-index="bindex">[ {{item}} ]</text>
				
		 </view>
	</view> -->
</view>
<logBox wx:if="{{logShow}}" http="{{http}}"></logBox>
<view class="more-btmBox"></view>
<view class='subBtnBox'>
    <view bindtap="findTime" class="">安装完成</view>
</view>
<van-dialog
  use-slot
  title="选择时间"
  show="{{ show }}"
  show-cancel-button
  bind:confirm="find"
  bind:close="onClose"
>
  <view class="block">
      <van-datetime-picker
        type="date"
        value="{{ currentDate }}"
        bind:input="onInput"
        min-date="{{ minDate }}"
        formatter="{{ formatter }}"
      />
  </view>
</van-dialog>
<van-dialog
  use-slot
  title="设备列表"
  show="{{ showDev }}"
  show-cancel-button
  bind:confirm=""
  bind:close="onClose"
>
<view class="moreList">
  <view wx:for="{{allData.devices}}" wx:key='index'>
    <span data-index="{{bindex}}">设备编号:</span><text>{{item}}</text>
  </view>
</view>
</van-dialog>
<van-dialog id="van-dialog" />

<van-toast id="van-toast" />