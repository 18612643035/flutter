<movable-area class="area" scale-area>
  <movable-view y="700rpx" direction="vertical" inertia out-of-bounds >
		<view bindtap='goFileup' class="optBt">
		  <van-icon color="#fff" name="plus" />
		</view>
  </movable-view>
</movable-area>
<van-toast id="van-toast" />
<van-empty wx:if="{{allData.length==0}}"  description="暂无VLOG数据" />
<view class="container" wx:for="{{allData}}" wx:key="allData" wx:for-index="key" wx:for-item="db">
      <view class="userContext">
        <view class="topBox">
          <view class="userImg">
            <image bindtap="resetAvatar" src="{{db.userAvatar}}"></image>
          </view>
          <view class="orgName">
            <view class="user" wx:if="{{db.userName!=null}}">
              <text>{{db.userName}}</text>
            </view>
            <view>
              <text class="listTitle">{{db.orgName}}</text>
            </view>
          </view>
        </view>
        <view class="logText" wx:if="{{db.content!=null}}">
          <text>{{db.content}}</text>
        </view>
        <view class="uploadimgbox">
          <view>
            <view wx:for="{{db.images}}" wx:key="item">
              <image class='uploadimg' src='{{item.url}}' data-presrc="{{item.url}}" bindtap='previewImg'></image>
            </view>
            <view wx:for="{{db.videos}}" wx:key="item">
              <video class='uploadimg' src="{{item.url}}" controls></video>
            </view>
          </view>
        </view>
        <view wx:if="{{db.canDelete}}" class="vlog_flex">
          <text class="btmBox">{{db.time}}</text>
					<image class="delete" src='../styles/images/Del@2x.png' data-id="{{db.id}}" bindtap="onRmove"></image>
        </view>
      </view>
</view>