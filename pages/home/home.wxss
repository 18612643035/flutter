/* pages/home/home.wxss */


.vlog_flex{
  display: flex;
  justify-content: space-between;
}
.open-user{
  width: 30px;
  height: 30px;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  margin: 0 10px;
}
.van-tabs__nav{
  background: azure;
}
.listTitle{
  text-align: left;
}
.container{
  width: 90%;
  margin: 20rpx auto;
  flex-direction: row;
  align-items: initial;
  background: #fff;
}
.container .uploadimg{
  width: 180rpx;
  height: 180rpx;
  margin: 6rpx;
  display: block;
}
.userContext{
  margin: 20rpx;
  flex: 1;
  overflow: hidden;
  border-radius: 10rpx;
  margin-top: 20px;
}
.topBox{
  display: flex;
}
.uploadimgbox>view{
  display: flex;
  overflow: hidden;
  flex-wrap: wrap;
}
.listTitle{
  color: #7a7979;
  font-size: 24rpx;
}
.icon-tongzhi{
  -webkit-animation: animations 3s liner;
  animation: animations 1.5s infinite;
  margin-right: 30rpx;
}
.icon-icon_common_add{
  font-size: 60rpx;
}
.menu{
  float: left;
  margin-top: 20rpx;
  margin-left: 10rpx;
}
.user{
  color: #576b95;
}
.userImg{
  padding-right: 24rpx;
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
}
.userImg image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
@keyframes animations{
  0% {
    opacity: 0;
  }
 100% {
    opacity: 1;
  } 

}