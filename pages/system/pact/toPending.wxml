<van-empty wx-if="{{allData.length<1}}" description="暂无信息" />
<scroll-view scroll-y class="content">
      <view wx:for="{{allData}}" wx:key = 'index' wx:for-index = "bindex" class="query">
          <View>
            <span data-index="{{bindex}}">合同计划完成详情:</span><text class="tapNav food-name">{{item.finishContent}}</text>
          </View>
          <view>
            <span data-index="{{bindex}}">合同计划完成时间:</span><text  class="tapNav food-name">{{item.finishTime}}</text>
          </view>
          <view>
            <span data-index="{{bindex}}">合同计划开始时间:</span><text  class="tapNav food-name">{{item.startTime}}</text>
          </view>
          <view>
            <span data-index="{{bindex}}">合同计划结束时间:</span><text  class="tapNav food-name">{{item.endTime}}</text>
          </view>
          <view>
            <span data-index="{{bindex}}">合同计划id:</span><text class="tapNav food-name">{{item.id}}</text>
          </view>
          <view>
            <span data-index="{{bindex}}">合同内容:</span><text class="tapNav food-name">{{item.content}}</text>
          </view>
          <view>
            <span data-index="{{bindex}}">合同计划状态:</span>
            <text wx:if="{{item.status==0}}" class="tapNav food-name">新建 </text>
            <text wx:if="{{item.status==1}}" class="tapNav food-name">待处理</text>
            <text wx:if="{{item.status==2}}" class="tapNav food-name">完成 </text>
          </view>
          <view class="button-box">
            <button class="cmt-button" data-index="{{bindex}}" bindtap="showPopup" form-type='submit'> 新增日志</button>
            <button class="cmt-button" data-index="{{bindex}}" bindtap="showLog" form-type='submit'> 查看日志</button>
            <button class="cmt-button" data-index="{{bindex}}" bindtap="editLog">编辑日志</button>
        </view>
        <view class="button-box" style="flex-direction: space-evenly;">
          <button class="cmt-button" data-index="{{bindex}}" bindtap="showPop" form-type='submit'>完成计划</button>
          </view>
      </view>
</scroll-view>
<van-dialog
  use-slot
  title="完成计划"
  show="{{ pshow }}"
  show-cancel-button
  bind:close="onClose"
  bind:confirm="getUserInfo"
>
<view class="details">
          <view class="pop-beg">
            <view>
              <text>合同计划完成情况:</text>
              <input bindinput='inputChange' name="finishContent" type="text" model:value="{{finishContent}}"/>
            </view>
            <view>
              <text>合同计划完成时间:</text>
              <!-- <input name="finishTime" type="text" model:value="{{finishTime}}"/> -->
            </view>
            <view>
              <van-datetime-picker
                class="datetime-picker"
                type="datetime"
                item-height="33"
                value="{{ currentDate }}"
                min-date="{{ minDate }}"
                max-date="{{ maxDate }}"
                bind:input="onInput"
                show-toolbar="flase"
                visible-item-count="3"
              />
            </view>
          </view>
  </view>
</van-dialog>
<van-dialog
  use-slot
  title="新增日志"
  show="{{ show }}"
  show-cancel-button
  bind:confirm="addLog"
  bind:close="onClose"
>
<view class="details">
  <remark bind:text='onLog'/>
</view>
</van-dialog>
<van-dialog
  use-slot
  title="日志"
  show="{{ showLog }}"
  show-cancel-button
  bind:close="onClose"
>
<view class="dialog">
          <view wx:for="{{LOG}}" wx:for-index = "bindex" wx:for-item="log" class="query">
            <view>
              <span>序号:</span><text>{{log.id}}</text>
            </view>
            <view>
              <span>内容:</span><text>{{log.content}}</text>
            </view>
            <view>
              <span>创建时间:</span><text>{{log.createTime}}</text>
            </view>
            <view class="button-box">
                <button class="cmt-button" data-index="{{bindex}}" data-id="{{log.id}}" bindtap="delete">删除</button>
              </view>
          </view>
  </view>
</van-dialog>
<van-toast id="van-toast" />