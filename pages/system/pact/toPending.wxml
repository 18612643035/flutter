<van-empty wx-if="{{allData.length<1}}" description="暂无信息" />
<scroll-view scroll-y class="content">
      <view wx:for="{{allData}}" wx:key = 'index' wx:for-index = "bindex" class="query">
          <View>
            <span data-index="{{bindex}}">合同计划完成详情:</span><text class="tapNav food-name">{{item.finishContent}}</text>
          </View>
          <view>
            <span data-index="{{bindex}}">合同计划完成时间:</span><text  class="tapNav food-name">{{item.finishTime}}</text>
          </view>
          <view>
            <span data-index="{{bindex}}">合同计划开始时间:</span><text  class="tapNav food-name">{{item.startTime}}</text>
          </view>
          <view>
            <span data-index="{{bindex}}">合同计划结束时间:</span><text  class="tapNav food-name">{{item.endTime}}</text>
          </view>
          <view>
            <span data-index="{{bindex}}">合同计划id:</span><text class="tapNav food-name">{{item.id}}</text>
          </view>
          <view>
            <span data-index="{{bindex}}">合同内容:</span><text class="tapNav food-name">{{item.content}}</text>
          </view>
          <view>
            <span data-index="{{bindex}}">合同计划状态:</span>
            <text wx:if="{{item.status==0}}" class="tapNav food-name">新建 </text>
            <text wx:if="{{item.status==1}}" class="tapNav food-name">待处理</text>
            <text wx:if="{{item.status==2}}" class="tapNav food-name">完成 </text>
          </view>
          <view class="button-box">
            <van-button round type="info" data-index="{{bindex}}" bindtap="showPopup" form-type='submit'>完成计划</van-button>
          </view>
      </view>
</scroll-view>
<van-dialog
  use-slot
  title="完成计划"
  show="{{ show }}"
  show-cancel-button
  bind:close="onClose"
  bind:confirm="getUserInfo"
>
<view class="details">
          <view class="pop-beg">
            <view>
              <text>合同计划完成情况:</text>
              <input bindinput='inputChange' name="finishContent" type="text" model:value="{{finishContent}}"/>
            </view>
            <view>
              <text>合同计划完成时间:</text>
              <!-- <input name="finishTime" type="text" model:value="{{finishTime}}"/> -->
            </view>
            <view>
              <van-datetime-picker
                class="datetime-picker"
                type="datetime"
                item-height="33"
                value="{{ currentDate }}"
                min-date="{{ minDate }}"
                max-date="{{ maxDate }}"
                bind:input="onInput"
                show-toolbar="flase"
                visible-item-count="3"
              />
            </view>
            <!-- <view>
              <text>合同计划状态:</text>
              <radio-group bindchange="handChange">
                <label class="radio">
                <radio value="0" checked="{{!details.status}}" />待处理
                </label>
                <label  name="status" class="radio">
                  <radio value="1" checked="{{!!details.status}}" />完成
                </label>
              </radio-group>
            </view> -->
          </view>
  </view>
</van-dialog>
<van-toast id="van-toast" />