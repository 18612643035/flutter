@import './pages/styles/icon.wxss';
/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
page{
  height: 100%;
  font-size: 28rpx;
}
 textarea,input,span,view,button{
  font-size: 28rpx;
} 

view.van-switch__node{
  font-size: 24px;
}
.flex-wrap{
  display: flex;

}
.flex-direction-col{
   flex-direction:column;
}
.flex-direction-row{
   flex-direction:row;
}
.button-box{
  display: flex;
  padding-top: 10px;
  /* justify-content: center; */
  justify-content: space-evenly;
}
.pop-beg{
  padding: 0 5px;
}
.pop-beg>view{
  display: flex;
  flex-direction: row;
}
.pop-beg>input{
  border-bottom: 1px solid rgb(133, 133, 133);
  margin-left: 1rem;
}
.select-wrap{
  width: 50%;
}
.datetime-picker{
  width:100%
}
view.van-picker__toolbar{
  display: none;
}
button.van-button--round,.cmt-button{
  border-radius: 1rem;
  font-size: 0.8rem;
  height: auto;
  color: #fff;
  background-color:rgb(26, 212, 255)
}
.items>view{
  width: 100%;
}

.tabRow{
  display: flex;
  flex-direction: row;
  margin-top: 10px;
}
.tabRow>text{
  width: 30%;
  text-align: right;
  margin-left: 5px;
}
.tabRow>input,.query>view input{
  border: 1px solid #ebeef5;
  color: #606266;
  margin-left: 1rem;
  padding-left: 5px;
  border-radius: 10px;
}
.query,.container1,.items{
  border-bottom: 1px solid #ebeef5;
  margin-top: 10px;
  padding-bottom: 10px;
}
.details .query
{
  height: 15rem;
  overflow: auto;
}
.query>view{
  padding-left: 5px;
  margin-top: 10px;
  display: flex;
  flex-direction: row;
}
.query>view text{
  color: #606266;
  margin-left: 1rem;
}
.query>view span{
  width: 30%;
  text-align: right;
  margin-left: 5px;
  display: block;
}
.bt_box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.bt_box button{
  width: 85px;
  font-size: 12px;
  line-height: 30px;
  margin-top: 1rem;
}
.dialog{
  max-height: 300px;
  overflow: auto;
}
.vsearch{
  display: flex;justify-content: center;align-items: center;position: relative;
}
.searchCont{
  position: absolute;
  height: 200px;
  overflow-y: auto;
  background:#f7f8fa ;
  z-index: 999;
  left: 14px;
  right: 12px;
  padding: 1px;
  top: 44px;
}
.dropdown{
  margin-left: 15px;
  width:100px;
  height: 30px;
}
.link{
  border-bottom: 1px solid #1989fa;
  width: auto;
}
.vsearch>view{
  width: 80%;
  position: relative;
}
.van-icon{
  color: #1989fa;
}
.query .query{
  display: block;
}
.layOutend{
  display: flex;
  justify-content: space-between;
}