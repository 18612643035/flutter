@import './pages/styles/icon.wxss';

@media only screen and (device-width : 375px) and (device-height : 603px) and (-webkit-device-pixel-ratio : 2) {
  page{
    font-size: 30rpx;
  }
}
@media only screen and (device-width: 414px) and (-webkit-device-pixel-ratio: 3) {
  page{
    font-size: 30rpx;
  }
}
@media only screen and (device-width: 750px) and (-webkit-device-pixel-ratio: 2) {
  page{
    font-size: 15rpx;
  }
}
/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
page{
  height: 100%;
  background:#f8f8f8;
  /* font-size: 30rpx; */
}
.optBt{
  float: right;
  margin-top: 10px;
  margin-right: 5px;
  display: flex;
  position: fixed;
  bottom: 20%;
  right: 5px;
  border-radius: 80rpx;
  width: 80rpx;
  height: 80rpx;
  justify-content: center;
  font-size:50rpx;
  background-image: linear-gradient(to right, #ff6e7f 0%, #bfe9ff  51%, #ff6e7f  100%);
}
view.van-switch__node{
  font-size: 24px;
}
.flex-wrap{
  display: flex;

}
.flex-direction-col{
   flex-direction:column;
}
.flex-direction-row{
   flex-direction:row;
}
.button-box{
  display: flex;
  padding-top: 10rpx;
  /* justify-content: center; */
  justify-content: space-evenly;
}
.pop-beg{
  padding: 0 5rpx;
}
.pop-beg>view{
  display: flex;
  flex-direction: row;
}
.pop-beg>input{
  border-bottom: 1rpx solid rgb(133, 133, 133);
  margin-left: 1rpx;
}
.select-wrap{
  width: 50%;
}
.datetime-picker{
  width:100%
}
view.van-picker__toolbar{
  display: none;
}
.items>view{
  width: 100%;
}

.tabRow{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.tabRow>text{
  width: 30%;
  text-align: right;
  margin-left: 5rpx;
}
.tabRow>input,.query>view input{
  border: 1px solid #ebeef5;
  color: #606266;
  margin-left: 1rpx;
  padding-left: 5rpx;
  border-radius: 10rpx;
}
.details .query
{
  height: 15rpx;
  overflow: auto;
}
.query>view{
  padding-left: 5rpx;
  display: flex;
  flex-direction: row;
}
.query>view text{
  color: #606266;
}
.query>view span{
  width: 30%;
  text-align: right;
  margin-left: 5rpx;
  display: block;
}
.bt_box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.bt_box button{
  width: 170rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-top: 2rpx;
}
.dialog{
  max-height: 300rpx;
  overflow: auto;
}
.vsearch{
  display: flex;justify-content: center;align-items: center;position: relative;
}
.searchCont{
  position: absolute;
  height: 200rpx;
  overflow-y: auto;
  background:#f7f8fa ;
  z-index: 999;
  left: 14rpx;
  right: 12rpx;
  padding: 1rpx;
  top: 88rpx;
}
.dropdown{
  margin-left: 15rpx;
  width:100rpx;
  height: 30rpx;
}
.link{
  border-bottom: 1rpx solid #1989fa;
  width: auto;
}
.vsearch>view{
  width: 80%;
  position: relative;
}
.van-icon{
  color: #1989fa;
}
.query .query{
  display: block;
}
.layOutend{
  display: flex;
  justify-content: space-between;
}
.imgBOx{
	display: flex;
}
.imgBOx .file{
	width: 180rpx;
	height: 180rpx;
	margin: 15rpx;
}
.query .trainContain{
	flex-direction: column;
}
.imgContent{
	border-bottom: 1px solid #d2d2d2;
}